{
  "name": "@fpc/hooks",
  "description": "Useful hooks for react apps",
  "version": "1.3.1",
  "author": "Emiliano Bovetti <emiliano.bovetti@gmail.com>",
  "license": "GPL-3.0",
  "keywords": [
    "functional",
    "hooks",
    "react",
    "fpc",
    "fp"
  ],
  "type": "module",
  "main": "./src/index",
  "scripts": {
    "test": "jest",
    "lint": "eslint ."
  },
  "jest": {
    "transform": {
      "^.*\\.js$": "babel-jest-modules"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@fpc)"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fpc-js/hooks.git"
  },
  "bugs": {
    "url": "https://github.com/fpc-js/hooks/issues"
  },
  "release": {
    "branch": "master",
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "src/*.js"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@fpc/types": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/runtime": "^7.14.8",
    "@fpc/utils": "^1.4.1",
    "@testing-library/react-hooks": "^7.0.1",
    "babel-jest-modules": "^0.0.2",
    "coveralls": "^3.1.1",
    "eslint": "^7.31.0",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^27.0.6",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8"
  }
}
